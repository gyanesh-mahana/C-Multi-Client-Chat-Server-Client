###############################################################################
# Author: 			Emil Maric												  
# Date Created:		Feb. 12, 2014
# Description:		Makefile for compiling both the server and client.
###############################################################################
.PHONY : all clean

all:
	@echo "###############################################################################"
	@echo "                                 Building shared/                              "
	@echo "###############################################################################"
	@sleep 2
	make -C shared/
	@echo "###############################################################################"
	@sleep 2
	@echo ""
	@echo ""
	@echo ""
	@echo "###############################################################################"
	@echo "                                 Building client/                              "
	@echo "###############################################################################"
	@sleep 2
	make -C client/
	@echo "###############################################################################"
	@sleep 2
	@echo ""
	@echo ""
	@echo ""
	@echo "###############################################################################"
	@echo "                                 Building server/                              "
	@echo "###############################################################################"
	@sleep 2
	make -C server/
	@echo "###############################################################################"
	@sleep 2
	@echo ""
	@echo ""
	@echo ""
	@echo "###############################################################################"
	@echo "                                  BUILD SUCCESS!                               "
	@echo "###############################################################################"
	@sleep 4

clean:
	@echo "###############################################################################"
	@echo "                                 Cleaning shared/                              "
	@echo "###############################################################################"
	@sleep 2
	make clean -C shared/
	@echo "###############################################################################"
	@sleep 2
	@echo ""
	@echo ""
	@echo ""
	@echo "###############################################################################"
	@echo "                                 Cleaning client/                              "
	@echo "###############################################################################"
	@sleep 2
	make clean -C client/
	@echo "###############################################################################"
	@sleep 2
	@echo ""
	@echo ""
	@echo ""
	@echo "###############################################################################"
	@echo "                                 Cleaning server/                              "
	@echo "###############################################################################"
	@sleep 2
	make clean -C server/
	@echo "###############################################################################"
	@sleep 2
	@echo ""
	@echo ""
	@echo ""
	@echo "###############################################################################"
	@echo "                                  CLEAN SUCCESS!                               "
	@echo "###############################################################################"
	@sleep 4
